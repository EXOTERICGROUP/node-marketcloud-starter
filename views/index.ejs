<% include header %>

    <!-- Page Content -->
    <div class="container-fluid" style="margin-top:100px;">

        <div class="row">

            <div class="col-md-3">
                <p class="lead">Categories</p>
                <div class="list-group">
                <% for (var i =0; i<categories.length;i++) { %>
                    <a href="/search?category_id=<%= categories[i].id %>" class="list-group-item"><%= categories[i].name %></a>
                <% } %>
                </div>
                <p class="lead">Brands</p>
                <div class="list-group">
                <% for (var i =0; i<brands.length;i++) { %>
                    <a href="/search?brand_id=<%= brands[i].id %>" class="list-group-item"><%= brands[i].name %></a>
                <% } %>
                </div>
            </div>

            <div class="col-md-9">

          
                <div class="row">

                <% for (var i =0; i<products.length;i++) { %>
                    <div class="col-sm-4 col-lg-4 col-md-4">
                        <a class="thumbnail product" href="/item/<%= products[i].id %>">
                           <% if (products[i].hasOwnProperty('images')) { %>
                             <div class="product_image" style="background-image:url(<%= products[i].images[0] %>)">
                             </div>
                            <% } else {%>
                             <div class="product_image" style="background-image:url(https://placeholdit.imgix.net/~text?txtsize=33&txt=200%C3%97200&w=600&h=600)">
                                </div>  
                           
                            <% } %>

                            <!-- <div class="caption">
                                <div class="pull-right product_price">$<%= products[i].price %></div>
                                <div class="product_name"><a href="/item/<%= products[i].id %>"><%= products[i].name %></a>
                                </div>
                            </div> -->
                            <div class="text-center">
                                    <p><div class="product_name"><%= products[i].name %></div></p>
                                    <p>â‚¬ <%= products[i].price %></p>
                                </div>
                        </a>
                    </div>
                    <% } %>
                

              

                </div>

            </div>

        </div>

    </div>
    <!-- /.container -->

    <div class="container">

        <hr>

        <!-- Footer -->
        <footer>
            <div class="row">
                <div class="col-lg-12">
                    <p>Copyright &copy; Your Website 2014</p>
                </div>
            </div>
        </footer>

    </div>
    <!-- /.container -->

    <!-- jQuery -->
    <script src="/components/jquery/dist/jquery.min.js"></script>

    <!-- Bootstrap Core JavaScript -->
    <script src="/components/bootstrap/dist/js/bootstrap.min.js"></script>

</body>

</html>