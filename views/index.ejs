<% include header %>

    <!-- Page Content -->
    <div class="container-fluid" style="margin-top:100px;">

        <div class="row">

            <div class="col-md-3 sidenav">

                <div class="group">
                    <div class="group-title">Categories</div>
                    <% for (var i =0; i< categories.length;i++) { %>
                        <div><a href="/search?category_id=<%= categories[i].id %>" class="group-item"><%= categories[i].name %></a></div>
                    <% } %>
                </div>
                
                
                
                    <div class="group">

                    <div class="group-title">Brands</div>
                    <% for (var i =0; i< brands.length;i++) { %>
                        <div><a href="/search?brand_id=<%= brands[i].id %>" class="group-item"><%= brands[i].name %></a></div>
                    <% } %>
                    </div>
                
            </div>

            <div class="col-md-9">

          
                <div class="row">

                <% for (var i =0; i<products.length;i++) { %>
                    <div class="col-sm-4 col-lg-4 col-md-4">
                        <a class="product" href="/item/<%= products[i].id %>">
                           <% if (products[i].hasOwnProperty('images')) { %>
                             <div class="image" style="background-image:url(<%= products[i].images[0] %>)">
                             </div>
                            <% } else {%>
                             <div class="image" style="background-image:url(https://placeholdit.imgix.net/~text?txtsize=33&txt=200%C3%97200&w=600&h=600)">
                                </div>  
                           
                            <% } %>

                            <div class="info row">
                                    <div class="col-xs-8 name"><%= products[i].name %></div>
                                    <div class="col-xs-4 price text-right">â‚¬ <%= products[i].price %></div>
                            </div>
                        </a>
                    </div>
                    <% } %>
                

              

                </div>

            </div>

        </div>

    </div>
    <!-- /.container -->

   
    <% include scripts %>
    <% include footer %>